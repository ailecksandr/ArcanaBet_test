%tr
  %td.text-center= index
  %td
    = link_to item.name, stock_path(item)
  %td= item.unit_price
  %td= number_to_percentage(item.interest, precision: 2)
  %td= item.duration
  %td.td-actions.text-center
    = link_to stock_path(item), class: 'mr-2' do
      %i.fa.fa-search

    = link_to stock_path(item), method: :delete do
      %i.fas.fa-trash-alt